{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OMG",
  "scopeName": "source.omg",
  "patterns": [
    { "include": "#comments" },
    { "include": "#annotations" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#object" },
    { "include": "#array" },
    { "include": "#property" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.omg",
          "match": "//.*$"
        },
        {
          "name": "comment.block.omg",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.omg" }
          }
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.omg",
          "match": "(@)(\\w+)(?:\\(([^)]*)\\))?",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.omg" },
            "2": { "name": "entity.name.function.annotation.omg" },
            "3": {
              "patterns": [
                { "include": "#strings" },
                { "include": "#numbers" }
              ]
            }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.omg",
          "match": "\\b(string|integer|int|number|boolean|bool|decimal|date|datetime|uuid|uri|email|binary|any)\\b"
        },
        {
          "name": "storage.type.reference.omg",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.omg",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.omg" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.omg" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.omg",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.omg",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.omg" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.omg" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.omg",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.omg",
          "match": "-?\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.omg",
          "match": "-?\\b\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.omg",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.omg",
          "match": "\\bfalse\\b"
        },
        {
          "name": "constant.language.null.omg",
          "match": "\\bnull\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.optional.omg",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.union.omg",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.assignment.omg",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.omg",
          "match": ","
        }
      ]
    },
    "object": {
      "patterns": [
        {
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.block.begin.omg" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.block.end.omg" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#property" },
            { "include": "#annotations" },
            { "include": "#types" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#constants" },
            { "include": "#operators" },
            { "include": "#object" },
            { "include": "#array" }
          ]
        }
      ]
    },
    "array": {
      "patterns": [
        {
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.array.begin.omg" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.array.end.omg" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#annotations" },
            { "include": "#types" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#constants" },
            { "include": "#operators" },
            { "include": "#object" },
            { "include": "#array" }
          ]
        }
      ]
    },
    "property": {
      "patterns": [
        {
          "name": "meta.property.omg",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "variable.other.property.omg" },
            "2": { "name": "keyword.operator.assignment.omg" }
          }
        }
      ]
    }
  }
}
