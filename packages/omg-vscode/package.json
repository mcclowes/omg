{
  "name": "omg-vscode",
  "displayName": "OMG - OpenAPI Markdown Grammar",
  "description": "Syntax highlighting for OMG (OpenAPI Markdown Grammar) files",
  "version": "0.1.0",
  "publisher": "omg",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcclowes/omg"
  },
  "scripts": {
    "build": "echo 'No build step required'",
    "test": "echo 'No tests'",
    "typecheck": "echo 'No TypeScript'"
  },
  "contributes": {
    "languages": [
      {
        "id": "omg",
        "aliases": ["OMG", "OpenAPI Markdown Grammar"],
        "extensions": [".omg"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "omg-md",
        "aliases": ["OMG Markdown"],
        "extensions": [".omg.md"],
        "configuration": "./language-configuration-md.json"
      }
    ],
    "grammars": [
      {
        "language": "omg",
        "scopeName": "source.omg",
        "path": "./syntaxes/omg.tmLanguage.json"
      },
      {
        "language": "omg-md",
        "scopeName": "text.html.markdown.omg",
        "path": "./syntaxes/omg-md.tmLanguage.json"
      },
      {
        "scopeName": "source.omg.codeblock",
        "path": "./syntaxes/omg-codeblock.tmLanguage.json",
        "injectTo": ["text.html.markdown", "text.html.markdown.omg"],
        "embeddedLanguages": {
          "meta.embedded.block.omg": "omg"
        }
      }
    ]
  }
}
